{% extends 'base.html.twig' %}

{% block title %}Liste note{% endblock %}
{% block body %}
<div class="main-content">
  {% for message in app.flashes('ERREUR') %}
        <script>
          function erreur(){
        swal('Refusé', '{{ message }}', 'error')
      }
          window.onload = erreur;
           // jWarning('{{ message }}', 'Notification', function(r) {});
        </script>
     {% endfor %}
     {% for message in app.flashes('SUCCESS') %}
        <script>
          function success(){
    // alert('ok')
    swal('Réussie', '{{ message }}', 'success')
    }
          window.onload = success;
         // jMessage('{{ message }}', 'Notification', function(r) {});
      </script>
  {% endfor %}
  
     <div class="section-body">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>Recherche</h4>
            </div>
            <form action="{{path('listenote')}}" method="post" enctype="multipart/form-data">
              <div class="form-row">
                <div class="col-md-2"></div>
                <div class="form-inline col-md-8">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <label for="inputEmail4">Classe</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <select type="classe" class="form-control" name="classe">
                        <option value="">Merci de choisir une classe</option>
                        {% for liste in classes %}
                        <option value="{{liste.idClasse.idClasse}}">{{liste.idClasse.libelleClasse}}</option>
                        {% endfor %}
                    </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <label for="inputEmail4">Matiere</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <select type="classe" class="form-control" name="matiere">
                        <option value="">Merci de choisir une matiere</option>
                        {% for liste in matieres %}
                        <option value="{{liste.idTypeMatiere.idTypeMatiere}}">{{liste.idTypeMatiere.libelleTypeMatiere}}</option>
                        {% endfor %}
                    </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="btn btn-primary form-control" value="recherche" name="valider">Rechercher</button>
                </div>
                <div class="col-md-2"></div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {% if notes is defined %}
    <div class="section-body">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>Liste des notes de la classe {{classe.libelleClasse}}</h4><br>
              <h4>Matiere {{matiere.libelleTypeMatiere}}</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped" id="tableExport">
                  <thead>
                    <tr>
                      <th class="text-center">#</th>
                      <th>Eleve</th>
                      <th>Examen</th>
                      <th>Note</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% set count = 1 %}
                    {% for liste in notes %}
                    <tr>
                      <td>{{count}}</td>
                      {#<td><div class="badge badge-success badge-shadow">{{liste.idAnnee.libelleAnnee}}</div></td>#}
                      <td>{{liste.idEleve.nomEleve}} {{liste.idEleve.prenomEleve}}</td>

                      <td>{{liste.idTypeDevoir.libelleTypeDevoir}}</td>
                      <td><input type="text" disabled="" value="{{liste.note}}" name="note_{{liste.idEleve.idEleve}}" class="form-control"></td>
                      <td><a href="" class="badge badge-success badge-shadow" data-toggle="modal" data-target="#exampleModal{{liste.idNote}}">Modifier</td>
                        <!-- basic modal -->
                        <div class="modal fade" id="exampleModal{{liste.idNote}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                          aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <form action="{{path('listenote')}}" method="post">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModal">Modification</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <div class="form-row">
                                   <div class="col-md-2"></div>
                                  <div class="form-group col-md-8">
                                      <label for="inputEmail4">Note</label>
                                      <input type="text" placeholder="Entrer la note de l'élève" class="form-control" name="note">
                                      <input type="hidden" value="{{liste.idNote}}" name="id">
                                  </div>
                                </div>
                              </div>
                              <div class="modal-footer bg-whitesmoke br">
                                <button type="submit" class="btn btn-primary" value="modif" name="valider">modifier</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              </div>
                            </div>
                            </form>
                          </div>
                        </div>
                    </tr>
                    {% set count = count + 1 %}
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
   
  </div> 
</div>
<script>
    function desattribuer(id){
        //var id = $('#iddepot').val();
        console.log(id);
        var parametros = {'id':id};
        $.ajax({
            url:'/desattribuer',
            type:"POST",
            dataType:"json",
            data:parametros,
            async:true,
            success: function(response){
                console.log(response);
                if("REQUETE" == response){
                    $("#idDesattribuer").html("<td colspan='4'>Aucun resultat trouvé</td>");
                }else{
                    $("#idDesattribuer").html(response);
                }
            }
        })
    }
</script>
{% endblock %}