{% extends 'base.html.twig' %}

{% block title %}Liste coges{% endblock %}
{% block body %}
<div class="main-content">
  {% for message in app.flashes('ERREUR') %}
        <script>
          function erreur(){
        swal('Refusé', '{{ message }}', 'error')
      }
          window.onload = erreur;
           // jWarning('{{ message }}', 'Notification', function(r) {});
        </script>
     {% endfor %}
     {% for message in app.flashes('SUCCESS') %}
        <script>
          function success(){
    // alert('ok')
    swal('Réussie', '{{ message }}', 'success')
    }
          window.onload = success;
         // jMessage('{{ message }}', 'Notification', function(r) {});
      </script>
  {% endfor %}
  <form action="{{path('listecoges')}}" method="post" enctype="multipart/form-data">
     <div class="section-body">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>COGES</h4>
            </div>
              <div class="form-row">
                <div class="col-md-1"></div>
                <div class="form-inline col-md-11">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <label for="inputEmail4">Année</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <select type="text" class="form-control" name="annee" id="annee">
                        <option value="">Merci de choisir une année</option>
                        {% for liste in annees %}
                        <option value="{{liste.idAnnee}}">{{liste.libelleAnnee}}</option>
                        {% endfor %}
                    </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <label for="inputEmail4">Classe</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <select type="text" class="form-control" name="classe" id="classe">
                        <option value="">Merci de choisir une classe</option>
                        {% for liste in classes %}
                        <option value="{{liste.idClasse}}">{{liste.libelleClasse}}</option>
                        {% endfor %}
                    </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="btn btn-primary form-control" value="recherche" name="valider">Rechercher</button>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
    {% if eleves is defined %}
    <div class="section-body">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>Liste de coges de la classe {{libclasse}}</h4><br>
              <h4>pour l'année academique {{libannee}}</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover" id="table-1" style="width:100%;">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Annee</th>
                      <th>Classe</th>
                      <th>Eleve</th>
                      <th>Date paiement</th>
                      <th>Statut</th>
                    </tr>
                  </thead>
                  <tbody>
                      {% set count = 1 %}
                      {% for list in eleves %}
                    <tr>
                      <td>{{count}}</td>
                     
                      <td>{{list.idAnnee.libelleAnnee}}</td>
                      <td>{{list.idClasse.libelleClasse}}</td>
                      <td>{{list.idEleve.nomEleve}} {{list.idEleve.prenomEleve}}</td>
                      <td>{{list.datePaiement|date('d-m-y')}}</td>
                      <td>{% if list.coges == 1 %}<span class="badge badge-primary">Payé</span>{% else %}<span class="badge badge-danger">Non Payé</span>{% endif %}</td>
                    </tr>
                    {% set count = count + 1 %}
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
   </form>
  </div> 
</div>
<script>
    function desattribuer(id){
        //var id = $('#iddepot').val();
        console.log(id);
        var parametros = {'id':id};
        $.ajax({
            url:'/desattribuer',
            type:"POST",
            dataType:"json",
            data:parametros,
            async:true,
            success: function(response){
                console.log(response);
                if("REQUETE" == response){
                    $("#idDesattribuer").html("<td colspan='4'>Aucun resultat trouvé</td>");
                }else{
                    $("#idDesattribuer").html(response);
                }
            }
        })
    }

    function responsable(){
        var id = $('#classe').val();
        console.log(id);
        var parametros = {'id':id};
        $.ajax({
            url:'/ajax/responsable',
            type:"POST",
            dataType:"json",
            data:parametros,
            async:true,
            success: function(response){
                console.log(response);
                if("REQUETE" == response){
                    $("#matiere").html("");
                }else{
                    $("#matiere").html(response);
                }
            }
        })
    }
</script>
{% endblock %}