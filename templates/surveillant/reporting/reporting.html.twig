{% extends 'base.html.twig' %}

{% block title %}Reporting{% endblock %}
{% block body %}
<div class="main-content">
  {% for message in app.flashes('ERREUR') %}
        <script>
          function erreur(){
        swal('Refusé', '{{ message }}', 'error')
      }
          window.onload = erreur;
           // jWarning('{{ message }}', 'Notification', function(r) {});
        </script>
     {% endfor %}
     {% for message in app.flashes('SUCCESS') %}
        <script>
          function success(){
    // alert('ok')
    swal('Réussie', '{{ message }}', 'success')
    }
          window.onload = success;
         // jMessage('{{ message }}', 'Notification', function(r) {});
      </script>
  {% endfor %}
  <form action="{{path('reporting')}}" method="post" enctype="multipart/form-data">
     <div class="section-body">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>REPORTING</h4>
            </div>
            <div class="form-row">
              <div class="col-md-1"></div>
              <div class="form-inline col-md-11">
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <label for="inputEmail4">Année</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <select type="text" class="form-control" name="annee" id="annee">
                      <option value="">Merci de choisir une année</option>
                      {% for liste in annees %}
                      <option value="{{liste.idAnnee}}">{{liste.libelleAnnee}}</option>
                      {% endfor %}
                  </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <label for="inputEmail4">Semestre</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <select type="text" class="form-control" name="semestre" id="semestre">
                      <option value="">Merci de choisir le semestre</option>
                      {% for liste in semestres %}
                      <option value="{{liste.idSemestre}}">{{liste.libelleSemestre}}</option>
                      {% endfor %}
                  </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <label for="inputEmail4">Classe</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <select type="text" class="form-control" name="classe" id="classe">
                      <option value="">Merci de choisir une classe</option>
                      {% for liste in classes %}
                      <option value="{{liste.idClasse}}">{{liste.libelleClasse}}</option>
                      {% endfor %}
                  </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <button type="submit" class="btn btn-primary form-control" value="recherche" name="valider">Rechercher</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% if idclasse is defined %}
    <div class="section-body">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>Reporting du {{libsemestre}} de la classe {{libclasse}} pour l'année academique {{libannee}}</h4>
            </div>
            <div class="form-row">
              <div class="col-md-1"></div>
              <div class="form-inline col-md-11">
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <a href="{{path('bilanSemestriel',{'annee':idannee,'semestre':idsemestre,'classe':idclasse})}}" target="_blank" type="" class="btn btn-primary">Bilan semestriel</a>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <a href="{{path('statistique',{'annee':idannee,'semestre':idsemestre,'classe':idclasse})}}" target="_blank" type="" class="btn btn-primary">Statistiques</a>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <a href="" type="" class="btn btn-primary">Bilan semestrielle</a>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <a href="" type="" class="btn btn-primary">Bilan semestrielle</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}