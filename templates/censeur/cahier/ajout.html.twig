{% extends 'base.html.twig' %}

{% block title %}Remplissage cahier de texte{% endblock %}
{% block body %}
<div class="main-content">
    {% for message in app.flashes('ERREUR') %}
        <script>
            function erreur(){
                swal('Refusé', '{{ message }}', 'error')
            }
            window.onload = erreur;
           // jWarning('{{ message }}', 'Notification', function(r) {});
        </script>
     {% endfor %}
     {% for message in app.flashes('SUCCESS') %}
        <script>
            function success(){
        // alert('ok')
        swal('Réussie', '{{ message }}', 'success')
    }
            window.onload = success;
         // jMessage('{{ message }}', 'Notification', function(r) {});
      </script>
    {% endfor %}
    <section class="section">
        <div class="section-body">
            <form action="{{path('ajoutcahier')}}" method="post">
            <div class="row">
            <!-- <div class="col-12 col-md-6 col-lg-6"> -->
                <div class="col-md-1"></div>
                <div class="col-md-10 card">
                    <div class="card-header">
                        <h4>Cahier de texte</h4>
                    </div>
                      <div class="card-body">
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Jour</label>
                          <div class="col-sm-12 col-md-7">
                            <select type="text" name="jour" class="form-control selectric">
                              <option value="">Merci de choisir un jour</option>
                              {% for jour in jours %}
                              <option value="{{jour.idJour}}">{{jour.libelleJour}}</option>
                              {% endfor %}
                            </select>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Heure</label>
                          <div class="col-sm-12 col-md-7">
                            <select type="text" name="heure" class="form-control selectric">
                              <option value="">Merci de choisir une heure</option>
                              {% for heure in heures %}
                              <option value="{{heure.idHeure}}">{{heure.libelleHeure}}</option>
                              {% endfor %}
                            </select>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Contenu</label>
                          <div class="col-sm-12 col-md-7">
                            <textarea type="text" name="contenu" class="summernote"></textarea>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                          <div class="col-sm-12 col-md-7">
                            <button class="btn btn-primary">Valider</button>
                          </div>
                        </div>
                      </div>
                    </div>
                <div class="col-md-1"></div>
            </div>
            </form>
        </div>
    </section>
</div>
{% endblock %}
{% block javascript %}
<script>
    document.getElementById("f1").style.display="none";
    document.getElementById("matiere").required = false;

    function radio()
    {
        //var x=document.querySelector("input[name=profil]:checked").value;
        var x=document.getElementById("profil").value;
        if(x=="4")
        {
            document.getElementById("f1").style.display="block";
            document.getElementById("matiere").required = true;
            //$("matiere").attributes["required"]="required";
           // $("source").attr("required",true);
        }
        else{
            document.getElementById("f1").style.display="none";
            document.getElementById("matiere").required = false;
            //$("matiere").attributes["required"]=null;
           // $("source").attr("required",false);
        }
    }
</script>
{% endblock %}