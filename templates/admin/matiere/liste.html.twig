{% extends 'base.html.twig' %}

{% block title %}Liste matieres{% endblock %}
{% block body %}
<div class="main-content">
	{% for message in app.flashes('ERREUR') %}
        <script>
        	function erreur(){
				swal('Good Job', '{{ message }}', 'error')
			}
        	window.onload = erreur;
           // jWarning('{{ message }}', 'Notification', function(r) {});
        </script>
     {% endfor %}
     {% for message in app.flashes('SUCCESS') %}
      	<script>
      		function success(){
		// alert('ok')
		swal('Good Job', '{{ message }}', 'success')
	}
        	window.onload = success;
         // jMessage('{{ message }}', 'Notification', function(r) {});
      </script>
    {% endfor %}
    <section class="section">
      	<div class="section-body">
        	<div class="row">
        		<div class="col-12">
                <div class="card">
                  <div class="row card-header">
                    <h4>Liste des matieres</h4>&nbsp;&nbsp;&nbsp;
                    <a href="{{path('ajoutmatiere')}}" class="btn btn-primary">Ajouter<span class="ion ion-person-add"></span></a>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Niveau</th>
                            <th>Code</th>
                            <th>Libelle</th>
                            <th>Coefficient</th>
                            <th>Date cr√©ation</th>
                          </tr>
                        </thead>
                        <tbody>
                        	{% set count = 1 %}
                        	{% for list in matieres %}
                          <tr>
                            <td>{{count}}</td>
                            <td>{{list.idNiveau.libelleNiveau}}</td>
                            <td>{{list.codeMatiere}}</td>
                            <td>{{list.libelleMatiere}}</td>
                            <td>{{list.coefficientMatiere}}</td>
                            <td>{{list.dateAjout|date('d-m-Y')}}</td>
                          </tr>
                          {% set count = count + 1 %}
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
        	</div>
		</div>
	</section>
</div>
{% endblock %}
