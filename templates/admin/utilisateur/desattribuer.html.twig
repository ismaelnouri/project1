{% extends 'base.html.twig' %}

{% block title %}Ajout Utilisateur{% endblock %}
{% block body %}
<div class="main-content">
  {% for message in app.flashes('ERREUR') %}
        <script>
          function erreur(){
        swal('Refusé', '{{ message }}', 'error')
      }
          window.onload = erreur;
           // jWarning('{{ message }}', 'Notification', function(r) {});
        </script>
     {% endfor %}
     {% for message in app.flashes('SUCCESS') %}
        <script>
          function success(){
    // alert('ok')
    swal('Réussie', '{{ message }}', 'success')
    }
          window.onload = success;
         // jMessage('{{ message }}', 'Notification', function(r) {});
      </script>
  {% endfor %}
<div class="section-body">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h4>La liste et désattribution</h4>
            </div>
            <div class="card-body">
              <div class='table-responsive'>
                    <table class='table table-striped' id='table-1'>   
                    <thead>  
                    <tr>
                       <th class="text-center">#</th>
                       <th>Classe</th>
                      <th>Nom</th>
                      <th>Prenom</th>
                      <th>Téléphone</th>
                      <th>Profil</th>
                      <th>Date</th>
                      <th>Annee</th>
                      {% if app.user.idProfil.idProfil == 3 %}
                      <th>Responsable</th>
                      {% endif %}
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% set count = 1 %}
                    {% for liste in surveillants %}    
                    <tr>
                      <td>{{count}}</td>
                      <td>{{liste.idClasse.libelleClasse}}</td>
                      <td>{{liste.idUtilisateur.nomUtilisateur}}</td>
                      <td>{{liste.idUtilisateur.prenomUtilisateur}}</td>
                      <td>{{liste.idUtilisateur.telUtilisateur}}</td>
                      <td>{{liste.idUtilisateur.idProfil.libelleProfil}}</td>
                      <td>{{liste.dateAjout|date('d-m-Y')}}</td>
                      <td>
                        <div class='badge badge-success badge-shadow'>{{liste.idAnnee.libelleAnnee}}</div>
                      </td>
                      {% if app.user.idProfil.idProfil == 3 %}
                      <td>{% if liste.responsable == 1 %}<span class='badge badge-success badge-shadow'>RESPONSABLE</span>{% else %}<span class='badge badge-danger badge-shadow'>NON RESPONSABLE</span>{% endif %}</td>
                      {% endif %}
                      <td><a href="{{path('sup_attr',{'id':liste.idClasseSurveillant})}}" class='btn btn-primary'>Désattribuer</a>{% if app.user.idProfil.idProfil == 3 %}|
                        <a href="{{path('responsable',{'id':liste.idClasseSurveillant,'classe':liste.idClasse.idClasse,'prof':liste.idUtilisateur.idUtilisateur})}}" class='btn btn-primary'>{% if liste.responsable == 1 %}DERESPONSABILISER{% else %}RESPONSABILISER{% endif %}{% endif %}</a></td>
                    </tr>
                    {% set count = count + 1 %}
                    {% endfor %}
                    </tbody>
                    <table>
                    </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div> 
</div>
{% endblock %}